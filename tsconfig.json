{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"skipLibCheck": true,

		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "lib",

		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,

		"types": ["vitest/globals", "node"]
	},
	"include": ["src"],
	"exclude": ["node_modules", "lib"]
}
